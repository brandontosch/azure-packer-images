{
    "variables": {
        "arm_client_id": "{{env `ARM_CLIENT_ID`}}",
        "arm_client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "arm_tenant_id": "{{env `ARM_TENANT_ID`}}",
        "arm_subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "arms_spn_object_id": "{{env `ARM_SPN_OBJECT_ID`}}",
        "azure_location": null,
        "envid": null,
        "version": null,
        "created_by": null
    },

    "builders": [{
      "type": "azure-arm",
  
      "client_id": "{{user `arm_client_id`}}",
      "client_secret": "{{user `arm_client_secret`}}",
      "tenant_id": "{{user `arm_tenant_id`}}",
      "subscription_id": "{{user `arm_subscription_id`}}",
      "object_id": "{{user `arms_spn_object_id`}}",
  
      "managed_image_resource_group_name": "{{user `envid`}}images_rg",
      "managed_image_name": "{{user `envid`}}windows_server_2008_r2_sp1",
  
      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2008-R2-SP1",
      "image_version": "{{user `version`}}",

      "communicator": "winrm",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_timeout": "3m",
      "winrm_username": "packer",
  
      "azure_tags": {
          "envid": "{{user `envid`}}",
          "created_by": "{{user `created_by`}}"
      },
  
      "location": "{{user `azure_location`}}",
      "vm_size": "Standard_DS2_v2"
    }],

    "provisioners": [{
      "type": "powershell",
      "inline": [
        "mkdir c:\\temp",
        "(New-Object Net.WebClient).DownloadFile('https://download.microsoft.com/download/E/7/6/E76850B8-DA6E-4FF5-8CCE-A24FC513FD16/Windows6.1-KB2506143-x64.msu', 'c:\\temp\\Windows6.1-KB2506143-x64.msu')",
        "wusa c:\\temp\\Windows6.1-KB2506143-x64.msu /quiet /norestart",
        "if( Test-Path $Env:SystemRoot\\windows\\system32\\Sysprep\\unattend.xml ){ rm $Env:SystemRoot\\windows\\system32\\Sysprep\\unattend.xml -Force}",
        "& $Env:SystemRoot\\System32\\Sysprep\\Sysprep.exe /oobe /generalize /shutdown /quiet"
      ]
    }]
  }